<p id="notice"><%= notice %></p>
<%= link_to "Back to Subjects", subjects_path, class: "back-link"%>
<h1>Listing Posts</h1>
<%= link_to 'New Post', new_subject_post_path, subjct_id: @subject.id ,  class: 'btn btn-primary', icon: 'plus' %>

<table cellspacing="0" class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <!-- <th>Subject</th> -->
      <th>Post</th>
      <th>Subject</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title%></td>
        <td><%= @subject.name%></td>
        <td><%= link_to 'Show', subject_post_path(@subject.id, post.id),  class: 'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_subject_post_path(@subject.id , post.id),  class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', subject_post_path(@subject.id, post.id),  method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="panel-footer"> <%#= paginate @posts %> </div>
<br>

